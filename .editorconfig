# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# matches every file
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# matches markdown
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# matches shell scripts
[*.sh]
indent_size = 2