{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>homelab/renovate-config"
  ],
  "baseBranchPatterns": ["main"],
  "assignAutomerge": true,
  "assignees": ["@sujiba-bot"],
  "reviewers": ["@sujiba"],
  "flux": {
    "managerFilePatterns": ["/clusters/.+\\.ya?ml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/clusters/.+\\.ya?ml$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/clusters/.+\\.ya?ml$/"]
  },
  "packageRules": [
    {
      "description": "add cluster name to commit message",
      "matchFileNames": ["clusters/hcloud/**"],
      "addLabels": ["cluster/hcloud"]
    },
    {
      "description": "add cluster name to commit message",
      "matchFileNames": ["clusters/home/**"],
      "addLabels": ["cluster/home"]
    }
  ]
}
